<div class="container user-new">
  <div class="row">
    <div class="col-sm-5 user-box1 mt-2">
      <div class="user-title mt-3">
        <h2 style="letter-spacing: 5px;">
          <%= icon('fas', 'lemon', style: "color: yellow;") %>
          アカウント作成
        </h2>
      </div>
      <br>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <div class="field">
            <h6><%= f.label :name, "名前：" %></h6>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "名前を入力してください" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field">
            <h6><%= f.label :email, "メールアドレス：" %></h6>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレスを入力してください" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field">
            <h6><%= f.label :password, "パスワード：" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上入力してください。)：</em>
            <% end %></h6>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワードを入力してください" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field">
            <h6><%= f.label :password_confirmation, "パスワード再確認：" %></h6>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "再度パスワードを入力してください" %>
          </div>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "アカウント作成", class: "btn btn-outline-primary"  %>
        </div>
      <% end %>
      <br>
      <br>

      <%= render "devise/shared/links" %>
    </div>

    <div class="col-sm-6 mt-2 user-box2">

      <div class="welcome-message mt-5">
        <h3>Lemonfishで<br>すべてのタスクを管理しよう</h3>
      </div>

      <div class="welcome-image">
        <%= embedded_svg("undraw_Scrum_board_re_wk7v.svg", class: "welcome-img") %>
      </div>

      <div class="actions">
        <%= link_to '簡単ログイン', users_guest_sign_in_path, method: :post, class: "btn btn-primary btn-lg btn-block" %>
      </div>

    </div>

  </div>
</div>
