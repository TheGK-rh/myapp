<div class="container mt-5">

  <div class="row">
    <div class="col-12 follow-show pt-3">
      <div class="mb-3">
        <h5 class="card-title"><img src="https://img.icons8.com/nolan/64/user-group-man-man.png"/>&nbsp;<%= @user.name %><%= t :profile_whose %><%= @title %></h5>
        <%= link_to (t :profile_backto_mypage), profile_path(current_user.id), class: "btn btn-outline-primary btn-sm" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 follow-member">
      <% if @users.any? %>
        <table class="table mt-3">
          <thead style="color: dodgerblue;">
            <tr>
              <th scope="col">ID：</th>
              <th scope="col"><%= t :profile_table_username %>：</th>
              <th scope="col"><%= t :profile_table_follow %>：</th>
              <th scope="col"><%= t :profile_table_follower %>：</th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tbody>
              <tr>
                <th scope="row"><%= user.id %></th>
                <td style="font-weight:bold;"><%= link_to user.name, profile_path(user) %></td>
                <td><%= user.followings.count %></td>
                <td><%= user.followers.count %></td>
              </tr>
            </tbody>
          <% end %>
        <% end %>
      </table>
      <%= paginate @users %>
    </div>
  </div>

</div>
