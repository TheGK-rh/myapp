<%= form_for(current_user.active_relationships.find_by(following_id: @user.id),
             html: { method: :delete }, remote:true) do |f| %>
  <%= f.submit (t :profile_unfollow_button), class: "btn btn-danger btn-sm" %>
  <%= link_to (t :profile_backto_mypage), profile_path(current_user.id), class: "btn btn-primary btn-sm" %>
<% end %>
