<div class="container">
  <div class="row">
    <div class="col-8 user-box">
      <div class="user-title">
        <h2>
          <%= icon('fas', 'lemon', style: "color: yellow;") %>
          パスワードをお忘れですか
        </h2>
      </div>
      <br>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="form-row">
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group col-md-6">
            <div class="field">
              <h6><%= f.label :email, "*メールアドレスを入力してください。" %></h6>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
            </div>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "パスワード再設定メールの送信", class: "btn btn-outline-primary btn-sm" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
