<div class="container mt-5">

  <h4 class="mb-3"><%= icon('fas', 'bell', style:"color: dodgerblue;") %>&nbsp;通知</h4>

  <% notifications = @notifications.where.not(visitor_id: current_user.id) %>
  <% if notifications.exists? %>
    <%= render @notifications %>
  <% else %>
  <div class="card" style="width: 30rem; font-size: 16px;">
    <ul class="list-group list-group-flush">
      <li class="list-group-item notification-list">通知はありません</li>
    </ul>
  </div>
  <% end %>

</div>
