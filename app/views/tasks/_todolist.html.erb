<h6 style="color: dodgerblue;"><%= icon('fas', 'list-alt') %>　<u>To Do List</u></h6>
<% tasks.each do |task| %>
  <% if task.category_id == 1 %>
    <div class="card md-1" id="task-<%= task.id %>">
      <div class="card-body">
        <h6 class="card-text">
          <%= icon('fas', 'fish', style: "color: dodgerblue;") %><%= link_to task.title, task_path(task) %>
        </h6>
        <h6>
          <%= task.term %>
        </h6>
        <p>
          <% if task.tags.any? %>
            <%= render task.tags %>
          <% end %>
        </p>
        <p class="text-right">
          <%= link_to edit_task_path(task) do %>
            <%= icon('fas', 'edit') %>
          <% end %>
          <%= link_to task_path(task), method: :delete, remote: true, date: { confirm: "削除します。よろしいですか。" } do %>
            <%= icon('fas', 'trash-alt') %>
          <% end %>
          <%= link_to gotowork_task_path(task), method: :patch do %>
            <%= icon('fas', 'arrow-alt-circle-right') %>
          <% end %>
        </p>
      </div>
    </div>
  <% end %>
<% end %>
