<h6 style="color: dodgerblue;"><u>To Do List</u></h6>
<% tasks.each do |task| %>
  <% if task.category_id == 1 %>
    <div class="card md-1" id="task-<%= task.id %>">
      <div class="card-body">
        <h6 class="card-text">
          <%= link_to task.title, task_path(task) %>
        </h6>
        <p>
          Task.Tags
        </p>
        <p class="text-right">
          <%= link_to edit_task_path(task) do %>
            <%= icon('fas', 'edit') %>
          <% end %>
          <%= link_to task_path(task), method: :delete, remote: true, date: { confirm: "削除します。よろしいですか。" } do %>
            <%= icon('fas', 'trash-alt') %>
          <% end %>
          <%= icon('fas', 'arrow-alt-circle-right') %>
        </p>
      </div>
    </div>
  <% end %>
<% end %>
