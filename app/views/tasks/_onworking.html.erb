<h6 style="color: dodgerblue;"><%= icon('fas', 'swimmer') %>　<u>作業中</u></h6>
<% tasks.each do |task| %>
  <% if task.category_id == 2 %>
    <div class="card md-1" id="task-<%= task.id %>">
      <div class="card-body">
        <h6 class="card-text">
          <%= link_to task.title, task_path(task) %>
        </h6>
        <p>
          <% if task.tags.any? %>
            <%= render task.tags %>
          <% end %>
        </p>
        <p class="text-right">
          <%= link_to backtodolist_task_path(task), method: :patch do %>
          <%= icon('fas', 'arrow-alt-circle-left') %>
          <% end %>
          <%= link_to edit_task_path(task) do %>
            <%= icon('fas', 'edit') %>
          <% end %>
          <%= link_to task_path(task), method: :delete, remote: true, date: { confirm: "削除します。よろしいですか。" } do %>
            <%= icon('fas', 'trash-alt') %>
          <% end %>
          <%= link_to gotocomplete_task_path(task), method: :patch do %>
            <%= icon('fas', 'arrow-alt-circle-right') %>
          <% end %>
        </p>
      </div>
    </div>
  <% end %>
<% end %>
