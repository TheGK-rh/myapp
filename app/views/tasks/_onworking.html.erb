<h5>作業中</h5>
<% tasks.each do |task| %>
  <% if task.category_id == 2 %>
    <div class="card md-1" id="task-<%= task.id %>">
      <div class="card-body">
        <h5 class="card-text">
          <%= link_to task.title, task_path(task) %>
        </h5>
        <h6>
          Task.Term
        </h6>
        <p>
          Task.Tags
        </p>
        <p class="text-right">
          <%= link_to edit_task_path(task) do %>
            <%= icon('fas', 'edit') %>
          <% end %>
          <%= link_to task_path(task), method: :delete, remote: true, date: { confirm: "削除します。よろしいですか。" } do %>
            <%= icon('fas', 'trash-alt') %>
          <% end %>
        </p>
      </div>
    </div>
  <% end %>
<% end %>
