<button type="button" class="btn btn-link" data-toggle="modal" data-target=".bd-example-modal-sm">
  <%= icon('fas', 'tasks') %>
</button>

<div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">サブタスク</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with(model: [@task, @subtask] ) do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <%= f.text_area :name, class: "form-control form-control-sm" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
        <%= f.submit "Add", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
