<div class="container mt-1">
  <div class="row">
    <div class="col-12">
      <div class="col-5 mt-5 tag-form">
        <%= render 'form', tag: @tag %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card mt-3 everytag">
        <div class="card-body">
          <h5><%= icon('fas', 'tags', style:"color: dodgerblue;") %>&nbsp;タグ一覧</h5>
          <div class="box mt-3">
            <% @tags.each do |tag| %>
              <% if user_signed_in? %>
                <% if tag.user_id == current_user.id %>
                  <span class="badge badge-pill badge-primary" style="font-size: 14px;" id="tag-<%= tag.id %>">
                    <%= tag.name %>
                    <%= link_to tag_path(tag), method: :delete, remote: true, data: { confirm: "削除します。よろしいですか。" }, style: "color: white;" do %>
                      <%= icon('far', 'trash-alt') %>
                    <% end %>
                  </span>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col-12">
      <div class="card mt-3 everytag">
        <div class="card-body">
          <h5><%= icon('fas', 'tags', style:"color: green;") %>&nbsp;みんなのタグ</h5>
          <div class="box mt-3 ">
            <% @tags.each do |tag| %>
              <% if user_signed_in? %>
                <% if tag.user_id != current_user.id %>
                  <span class="badge badge-pill badge-success mb-2" style="font-size: 14px;">
                    <%= tag.name %>
                  </span>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
