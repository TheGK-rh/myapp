<div class="container mt-5">
  <div class="row">

    <div class="col-6">
      <div class="tag-form">
        <%= render 'form', tag: @tag %>
      </div>
      <h5 class="mt-5">タグ一覧</h5>
      <div class="tag-index">
        <% @tags.each do |tag| %>
          <div id="tag-<%= tag.id %>">
            <span class="badge badge-pill badge-primary" style="font-size: 14px;">
              <%= tag.name %>
              <%= link_to tag_path(tag), method: :delete, remote: true, data: { confirm: "削除します。よろしいですか。" }, style: "color: white;" do %>
                <%= icon('far', 'trash-alt') %>
              <% end %>
            </span>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
