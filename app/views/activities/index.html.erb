<div class="container mt-5">

  <h5 class="mb-3"><%= icon('fas', 'chart-line', style:"color: dodgerblue;") %>&nbsp;<%= t :activities_activity %></h5>

  <% if @activities.exists? %>
    <% @activities.each do |activity| %>
      <%= render 'activities/activity', activity: activity %>
    <% end %>
    <br>
    <%= paginate @activities %>
  <% else %>
  <div class="card" style="width: 30rem; font-size: 16px;">
    <ul class="list-group list-group-flush">
      <li class="list-group-item activity-list"><%= t :activities_no_activity %></li>
    </ul>
  </div>
  <% end %>

</div>
